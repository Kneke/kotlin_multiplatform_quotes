CREATE TABLE quoteDbRecord (
  id INTEGER NOT NULL,
  quote TEXT NOT NULL,
  author TEXT NOT NULL,
  permalink TEXT
);

CREATE INDEX quote_id ON quoteDbRecord(id);

insert:
INSERT INTO quoteDbRecord(id, quote, author, permalink)
VALUES (?, ?, ?, ?);

selectAll:
SELECT * FROM quoteDbRecord;

selectRandom:
SELECT * FROM quoteDbRecord
ORDER BY RANDOM()
LIMIT 1;

deleteAll:
DELETE FROM quoteDbRecord;